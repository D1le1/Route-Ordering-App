<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Theme.BusIk">
        <attr name="spinnerItemBackground" format="color" />
        <attr name="myColor" format="color" />
        <attr name="errorColor" format="color"/>
    </declare-styleable>

    <style name="Theme.BusIk" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/teal_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/teal_700</item>
        <item name="spinnerItemBackground">?attr/background</item>
        <item name="myColor">@color/white</item>
        <item name="errorColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SpinnerStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SpinnerDropDown">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="dialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTheme">@style/dialogStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/dialogPosButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/dialogPosButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/dialogNegButtonStyle</item>
    </style>

    <style name="dialogPosButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>

    <style name="dialogNegButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
</resources>