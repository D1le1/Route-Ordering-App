<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Theme.BusIk">
        <attr name="spinnerItemBackground" format="color" />
        <attr name="myColor" format="color" />
        <attr name="errorColor" format="color"/>
    </declare-styleable>

    <style name="Theme.BusIk" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/teal_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/teal_700</item>
        <item name="spinnerItemBackground">?attr/background</item>
        <item name="myColor">@color/white</item>
        <item name="errorColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SpinnerStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SpinnerDropDown">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>

    </style>
</resources>