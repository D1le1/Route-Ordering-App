<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BusIk" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/teal_200</item>
        <item name="spinnerItemBackground">@color/white</item>
        <item name="myColor">@color/black</item>
        <item name="errorColor">@android:color/darker_gray</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SpinnerStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SpinnerDropDown">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="dialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTheme">@style/dialogStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/dialogPosButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/dialogPosButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/dialogNegButtonStyle</item>
    </style>

    <style name="dialogPosButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>

    <style name="dialogNegButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
</resources>